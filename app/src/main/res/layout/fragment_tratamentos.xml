<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.tratamentos.TratamentosFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtTratamento1"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtTipo1"
                    android:textColorHint="@color/padrao"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnTipo1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtTipo2"
                    android:textColorHint="@color/padrao"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnTipo2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtTipo3"
                    android:textColorHint="@color/padrao"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnTipo3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</LinearLayout>