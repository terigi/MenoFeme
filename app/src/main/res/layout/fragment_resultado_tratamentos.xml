<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.ui.tratamentos.ResultadoTratamentosFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtResTrat1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/app_name"
                    android:textColorHint="@color/black"
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/txtResTrat2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/app_name"
                    android:textColorHint="@color/black"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/linhaInfo"
                    android:textColorHint="@color/padrao"
                    android:textSize="25sp"/>
                <ImageButton
                    android:id="@+id/btnHomeTrat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn2"
                    android:src="@drawable/ic_home"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</LinearLayout>