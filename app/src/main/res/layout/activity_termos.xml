<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fundoApp"
    tools:context=".view.Termos">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTermos"
                    android:textColor="@color/padrao"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblOla"
                    android:textColor="@color/padrao"
                    android:textSize="22sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtTermo"
                    android:textColor="@color/padrao"
                    android:textSize="22sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:justificationMode="inter_word"/>

                <CheckBox
                    android:id="@+id/ckbTermos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnTermo"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onTermosClicked"
                    android:justificationMode="inter_word"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTermos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn1"
                    android:text="@string/btnTermoS"
                    android:textColor="@color/padrao"
                    android:layout_gravity="center" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</LinearLayout>