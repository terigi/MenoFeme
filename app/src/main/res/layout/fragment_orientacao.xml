<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.ui.orientacao.OrientacaoFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtObs1"
                    android:textColorHint="@color/padr達o"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao" />
                <ImageButton
                    android:id="@+id/btnObs1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtObs2"
                    android:textColorHint="@color/padr達o"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnObs2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
                <TextView
                    android:id="@+id/txtObs3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtObs3"
                    android:textColorHint="@color/padr達o"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnObs3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
                <TextView
                    android:id="@+id/txtObs4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint="@string/txtObs4"
                    android:textColorHint="@color/padr達o"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_menstruacao"/>
                <ImageButton
                    android:id="@+id/btnObs4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn2"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_proximo"
                    tools:ignore="DuplicateSpeakableTextCheck"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</LinearLayout>